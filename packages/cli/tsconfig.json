{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ES6",
      "ES2015",
      "ESNext"
    ],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "templates"
  ]
}